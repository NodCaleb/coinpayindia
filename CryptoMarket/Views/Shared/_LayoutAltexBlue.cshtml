@using CryptoMarket
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="~/Content/altex_blue/css/font-awesome.min.css">
    <link href="~/Content/altex_blue/css/bootstrap-grid.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/altex_blue/css/TechanChart.css?2">
    <link rel="stylesheet" href="~/Content/altex_blue/css/nanoscroller.css">
    <link rel="stylesheet" href="~/Content/altex_blue/css/style.css?5">


    <title>NONIX Trade | CryptoCurrency Exchange</title>
</head>
<body>
<!-- begin header -->
<header>
    <div class="container-fluid">
        <div class="flex-row flex-align-items-center flex-space-between">
            <div class="flex-row flex-align-items-center header-flex-block">
                <div class="header-logo">
                    <a href="/">
                        <img src="~/Content/altex_blue/img/loowerewgos_small_ntrade.png" alt="Картинка" class="img-respomsive" style="height:24px; margin:-8px;">
                    </a>
                </div>
                <div class="header-nav">
                    <div class="header-nav-icon"></div>
                    <ul class="flex-row">
                        <li>
                            <a href="/trade">
                                <i class="icon icoCoinPayIndia"></i>
                                Trade
                            </a>
                        </li>
                        <li>
                            <a href="/voting">
                                <i class="icon icon-voting"></i>
                                Voting
                            </a>
                        </li>
                        <li>
                            <a href="/fees">
                                <i class="icon icon-fees"></i>
                                FEES
                            </a>
                        </li>
                        <li>
                            <a href="/support">
                                <i class="icon icon-support"></i>
                                Support
                            </a>
                        </li>
                        
                        <li>
                            <a href="/docs" target="_blank">
                                <i class="icon icon-support"></i>
                                API
                            </a>
                        </li>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="visible-xs visible-sm">
                                <a href="@Url.Action("Register","Account")">
                                    <i class="icon icon-lock"></i>
                                    Registration
                                </a>
                            </li>
                            <li class="visible-xs visible-sm">
                                <a href="@Url.Action("Login","Account")">
                                    <i class="icon icon-arrow-right-circle"></i>
                                    Sign In
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="visible-xs visible-sm">
                                <a href="@Url.Action("Index","Manage")">
                                    Profile
                                </a>
                            </li>
                            <li class="visible-xs visible-sm">
                                <a href="@Url.Action("Index","Platforms")">
                                    Platform Trading
                                </a>
                            </li>
                            <li class="visible-xs visible-sm">
                                <a href="@Url.Action("LogOff","Account")">
                                    Logout
                                </a>
                            </li>
                        } 
                            
                    </ul>
                </div>
            </div>
            <div class="header-account hidden-xs hidden-sm">
                @if (!User.Identity.IsAuthenticated)
                {
                    @: <a href="@Url.Action("Login","Account")">Sign In</a> or <a href="@Url.Action("Register","Account")">Register</a>
                }
                else
                {
                    <a href="" data-toggle="dropdown" aria-expanded="true"><i class="fa fa-user"></i> User </a>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="@Url.Action("Index", "Manage")"><i class="ti-user text-custom m-r-10"></i>Profile</a></li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("LogOff", "Account")"><i class="ti-power-off text-danger m-r-10"></i>Logout</a></li>

                        @if (ApplicationUserManager.IsUserAdmin(User.Identity.GetUserId()))
                        {
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "MarketsAdmin")"><i class="fa fa-list"></i>&nbsp;Markets Admin</a></li>
                            <li><a href="@Url.Action("Index", "CoinsAdmin")"><i class="fa fa-btc"></i>&nbsp;Coins Admin</a></li>
                            <li><a href="@Url.Action("Index", "UsersAdmin")"><i class="fa fa-user"></i>&nbsp;Users Admin</a></li>
                            <li><a href="@Url.Action("Index", "OrdersAdmin")"><i class="fa fa-exchange"></i>&nbsp;Order Admin</a></li>
                            <li><a href="@Url.Action("Index", "WithdrawAdmin")"><i class="fa fa-level-down"></i>&nbsp;Withdraw Admin</a></li>
                            <li><a href="@Url.Action("Index", "AccountingAdmin")"><i class="fa fa-tachometer"></i>&nbsp;Accounting Admin</a></li>
                            <li><a href="@Url.Action("Index", "VotingAdmin")"><i class="fa fa-flag"></i>&nbsp;Coin Votes Admin</a></li>
                            <li><a href="@Url.Action("Index", "EmailAdmin")"><i class="fa fa-envelope"></i>&nbsp;Email Send Admin</a></li>
                            <li><a href="@Url.Action("Index", "AdminLogs")"><i class="fa fa-search"></i>&nbsp;Log Control Admin</a></li>
                            <li><a href="@Url.Action("Index", "CoinsInspectionAdmin")"><i class="fa fa-terminal"></i>&nbsp;Coin Inspection</a></li>
                            <li><a href="@Url.Action("Index", "VouchersAdmin")"><i class="fa fa-newspaper-o"></i>&nbsp;Vouchers Admin</a></li>
                            <li><a href="@Url.Action("Index", "VerificationAdmin")"><i class="fa fa-newspaper-o"></i>&nbsp;Verification Admin</a></li>
                            <li><a href="@Url.Action("Index", "DepositInrAdmin")"><i class="fa fa-newspaper-o"></i>&nbsp;INR Deposit Admin</a></li>
                            <li><a href="@Url.Action("Index", "WithdrawInrAdmin")"><i class="fa fa-newspaper-o"></i>&nbsp;INR Withdraw Admin</a></li>
                        }
                    </ul>
                }                    
            </div>
        </div>
    </div>
</header>
<!-- end header -->
<!-- begin content -->
<div class="content">
    <div class="container-fluid">
        @RenderBody()
    </div>
</div>
<!-- end conternt -->
<!-- begin footer -->
<footer>
    <div class="container-fluid">
        <div class="flex-row flex-align-items-center flex-wrap">

            <div class="footer-copy">
                © 2017. N-Trade
            </div>
            <div class="footer-server-time">
                Server time: <span>@DateTime.UtcNow UTC</span> 
            </div>
        </div>
    </div>
</footer>
<!-- end footer -->
<!-- begin script -->
<script src="~/Content/altex_blue/js/jquery-ui.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="~/Content/altex_blue/js/jquery.nanoscroller.min.js"></script>
<script src="~/Content/altex_blue/js/common.js"></script>
@RenderSection("scripts", false)
    
<script src="~/Assets/notiny/notiny.min.js"></script>
<link href="~/Assets/notiny/notiny.min.css" rel="stylesheet" />
<!-- end script -->
</body>
</html>