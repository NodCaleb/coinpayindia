@model DepositINR
@{
    Layout = "~/Views/Shared/_LayoutAltexBlue.cshtml";
}
<script>
                                $(function () {
                                    $('#accept').click(function () {
                                        $.ajax({
                                            type: 'POST',
                                            url: "@Url.Action("Accept")",
                                            data: {
                                                id: "@Model.Id",
                                                amoumt: $('#Amomunt').val()
                                            }
                                        }).done(function (data) {
                                            window.location.replace('@Url.Action("Index", "DepositInrAdmin")');
                                        });
                                    });

                                    $('#reject').click(function () {
                                       $.ajax({
                                            type: 'POST',
                                            url: "@Url.Action("Reject")",
                                            data: {
                                                id: "@Model.Id"
                                            }
                                       }).done(function (data) {
                                           window.location.replace('@Url.Action("Index", "DepositInrAdmin")');
                                        });
                                    });
                                });
</script>
<div class="row card-row">
    <div class="col-lg-4">
        <div class="card-block">
            <div class="card-header">
                <h3>
                    Deposit Form
                </h3>
            </div>
            <div class="card-form">

                <h3>Please make a deposit, using that details:</h3>


                    <div class="form-content">

                        <div class="form-group clear-block">
                            <label class="col-md-5 control-label" for="Price">Full Name (compare Slip Full Name and this)</label>
                            <div class="col-md-7">
                                <div class="input-block flex-row flex-align-items-center">
                                    <input type="text" id="" class="form-control" value="@Model.UserFullName" disabled="disabled">
                                </div>
                            </div>
                        </div>

                        <div class="form-group clear-block">
                            <label class="col-md-5 control-label" for="Price">CHECK Deposit Amount</label>
                            <div class="col-md-7">
                                <div class="input-block flex-row flex-align-items-center">
                                    <input type="text" id="Amomunt" name="Amomunt" class="form-control" value="1000">
                                </div>
                            </div>
                        </div>

                        <div class="form-group clear-block">
                            <p>Check bank slip image(click to enlarge)</p>

                            <a href="@Url.Action("GetImage",new { id = Model.SlipImageGuid })" target="_blank"><img style="max-width:100%" src="@Url.Action("GetImage",new { id = Model.SlipImageGuid })" /></a>
                        </div>
                        <div class="form-bottom">
                            <div class="form-bottom">
                                <button style="width:50%" class="btn btn-default" id="accept">Accept Deposit (CHECK AMOUNTS!)</button>
                                <button style="width:40%" class="btn btn-default" id="reject">Reject Deposit</button>
                            </div>

                        </div>
                    </div>
                

            </div>
        </div>
    </div>
</div>

