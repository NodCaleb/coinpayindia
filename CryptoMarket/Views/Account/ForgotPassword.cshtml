@model CryptoMarket.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_LayoutAltexBlueLogin.cshtml";
}
<div class="container-fluid wrapper-page">
    <div class="card-block">
        <div class="card-header">
            <h3>
                @ViewBag.Title
            </h3>
        </div>
        <div class="card-form">
            @using (Html.BeginForm("ForgotPassword", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class = "form-horizontal m-t-20" }))
            {
                @Html.AntiForgeryToken()

                foreach (var modelState in ViewData.ModelState.Values)
                {
                    foreach (var error in modelState.Errors)
                    {
                        <p style="color: red;">@error.ErrorMessage</p>
                    }
                }

                <div class="form-content">
                    <div class="form-group clear-block">
                        <div class="col-md-12">
                            <div class="input-block flex-row flex-align-items-center">
                                <input class="form-control" placeholder="Enter your email" name="Email" type="text" required="" style="text-align:left;">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-bottom">
                    <button type="submit" name="submit" class="btn btn-default">Email Link</button>
                </div>
            }
        </div>
    </div>
</div>