@model CryptoMarket.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LayoutAltexBlueLogin.cshtml";
}

<div class="container-fluid wrapper-page">
    <div class="card-block">
        <div class="card-header">
            <h3>
                @ViewBag.Title
            </h3>
        </div>
        <div class="card-form">
            @using (Html.BeginForm("ResetPassword", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class = "form-horizontal m-t-20" }))
            {
                @Html.AntiForgeryToken()

                foreach (var modelState in ViewData.ModelState.Values)
                {
                    foreach (var error in modelState.Errors)
                    {
                        <p style="color: red;">@error.ErrorMessage</p>
                    }
                }

                <input type="hidden" name="UserId" value="@Model.UserId" />
                <input type="hidden" name="TokenId" value="@Model.TokenId" />

                <div class="form-content">
                    <div class="form-group clear-block">
                        <div class="col-md-12">
                            <div class="input-block flex-row flex-align-items-center">
                                <input class="form-control" placeholder="Password" name="Password" type="password" required="" style="text-align:left;">
                            </div>
                        </div>
                    </div>
                    <div class="form-group clear-block">
                        <div class="col-md-12">
                            <div class="input-block flex-row flex-align-items-center">
                                <input class="form-control" placeholder="ConfirmPassword" name="ConfirmPassword" type="password" required="" style="text-align:left;">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-bottom">
                    <button type="submit" name="submit" class="btn btn-default">Reset</button>
                </div>
            }
        </div>
    </div>
</div>