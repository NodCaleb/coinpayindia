@model CryptoMarket.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutAltexBlueLogin.cshtml";
}

<div class="container-fluid wrapper-page">
    <div class="card-block">
        <div class="card-header">
            <h3>
                Registration
            </h3>
        </div>
        <div class="card-form">
            @using (Html.BeginForm("Register", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class = "form-horizontal m-t-20" }))
            {
                @Html.AntiForgeryToken()

                foreach (var modelState in ViewData.ModelState.Values)
                {
                    foreach (var error in modelState.Errors)
                    {
                        <p style="color: red;">@error.ErrorMessage</p>
                    }
                }

                <div class="form-content">
                    <div class="form-group clear-block">
                        <div class="col-md-12">
                            <div class="input-block flex-row flex-align-items-center">
                                <input class="form-control" placeholder="Email" name="Email" type="text" style="text-align:left;">
                            </div>
                        </div>
                    </div>
                    <div class="form-group clear-block">
                        <div class="col-md-12">
                            <div class="input-block flex-row flex-align-items-center">
                                <input class="form-control" placeholder="Username" name="Username" type="text" style="text-align:left;">
                            </div>
                        </div>
                    </div>
                    <div class="form-group clear-block">
                        <div class="col-md-12">
                            <div class="input-block flex-row flex-align-items-center">
                                <input class="form-control" placeholder="Password" name="Password" type="password" style="text-align:left;">
                            </div>
                        </div>
                    </div>
                    <div class="form-group clear-block">
                        <div class="col-md-12">
                            <div class="input-block flex-row flex-align-items-center">
                                <input class="form-control" placeholder="Password Confirmation" name="ConfirmPassword" type="password" style="text-align:left;">
                            </div>
                        </div>
                    </div>
                    <div class="form-group clear-block">
                        <div class="col-md-12">
                            <div class="input-block flex-row flex-align-items-center">
                                <input class="form-control" placeholder="Pin Code" name="PinCode" type="password" style="text-align:left;">
                            </div>
                        </div>
                    </div>
                    <div class="form-group clear-block">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-primary">
                                <input id="checkbox-signup" type="checkbox" checked="checked">
                                <label for="checkbox-signup">I accept <a href="#">Terms and Conditions</a></label>
                            </div>
                        </div>
                    </div>
                </div>

                        <div class="form-bottom">
                            <button type="submit" name="submit" class="btn btn-default">Register</button>
                        </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 underform">
            <p>Already have account? <a href="@Url.Action("Login","Account")" class="text-primary m-l-5"><b>Sign In</b></a></p>
        </div>
    </div>
</div>