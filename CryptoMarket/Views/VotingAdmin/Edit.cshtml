@model VotingForCoins

@{
    ViewBag.Title = "Edit";
}

<div class="pane active card-block">
    <h2 style="margin-left:15px">Edit</h2>
    @using (Html.BeginForm("Edit", "VotingAdmin", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "alert alert-danger" })
        <div class="form-content">

            <div class="form-group clear-block">
                @Html.LabelFor(model => model.CoinName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="input-block flex-row flex-align-items-center">
                        @Html.EditorFor(model => model.CoinName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CoinName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group clear-block">
                @Html.LabelFor(model => model.VotingAddress, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="input-block flex-row flex-align-items-center">
                        @Html.EditorFor(model => model.VotingAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.VotingAddress, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group clear-block">
                @Html.LabelFor(model => model.CurrentVotesNumber, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="input-block flex-row flex-align-items-center">
                        @Html.EditorFor(model => model.CurrentVotesNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CurrentVotesNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
        <div class="form-bottom">
            <button type="submit" class="btn btn-default">
                Save
            </button>
        </div>
    }
</div>
<p style="margin:15px; font-family:sans-serif;">
    @Html.ActionLink("Back to List", "Index")
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}