@{
    Layout = "~/Views/Shared/_LayoutAltexBlue.cshtml";
}
<h2>
    BTC-e Activation
</h2>
<div class="alert alert-info no-margin fade in">
    <i class="fa-fw fa fa-info"></i> Provide your BTC-e API KEY and SECRET with "Info" and "Trade" rights
</div>
@if (ViewBag.Error == true)
{
    <div class="alert alert-danger no-margin fade in">
        Unable to connect BTC-e API with provided credentials. Check "Info" and "Trade" flags.
    </div>
}
<div class="row card-row">
    <div class="col-lg-12">
        <div class="card-block">
            <div class="card-header">
                <h3>
                    Apply your BTC-e API Credentials
                </h3>
            </div>
            <div class="card-form">
                <form action="@Url.Action("btce")" class="form-horizontal" method="POST">

                    <div class="">
                        <div class="form-group clear-block">
                            <label class="col-md-2 control-label" for="Price" style="margin-left:0">API KEY</label>
                            <div class="col-md-10">
                                <div class="input-block flex-row flex-align-items-center">
                                    <input type="text" class="form-control" name="key">
                                </div>
                            </div>
                        </div>
                        <div class="form-group clear-block">
                            <label class="col-md-2 control-label" for="Price" style="margin-left:0">API SECRET</label>
                            <div class="col-md-10">
                                <div class="input-block flex-row flex-align-items-center">
                                    <input type="text" class="form-control" name="secret">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <button type="submit" name="submit" class="btn btn-default">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

