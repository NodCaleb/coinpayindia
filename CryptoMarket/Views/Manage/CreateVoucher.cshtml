@model CryptoMarket.Models.VouchCreatePageModel
@{
    Layout = "~/Views/Shared/_LayoutAltexBlue.cshtml";
}
<style>
    .validation-summary-valid { display: none; }
    .form-content {
        margin-bottom: 0;
        padding-bottom: 0;
        border-bottom: 0;
    }
    h3{
        margin: 15px;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="markets-filter-tabs clear-block">
            <ul class="flex-row tabs-nav">
                @Html.Partial("_TabbedMenuPartial")
            </ul>
        </div>
        <div class="tabs-pane">
            <div class="pane active card-block">
                <h3>New Voucher Creation</h3>
                @using (Html.BeginForm("CreateVoucher", "Manage", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "alert alert-danger" })
                    <div class="form-content">

                        <div class="form-group clear-block">
                            @Html.LabelFor(model => model.CoinId, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                <div class="input-block flex-row flex-align-items-center">
                                    @Html.DropDownListFor(model => model.CoinId, new SelectList(ViewBag.CoinSystemsList, "Id", "Name"), new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group clear-block">
                            @Html.LabelFor(model => model.Amount, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                <div class="input-block flex-row flex-align-items-center">
                                    @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", style = "text-align:left;" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group clear-block">
                            @Html.LabelFor(model => model.ExpiryDays, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                <div class="input-block flex-row flex-align-items-center">
                                    @Html.TextBoxFor(model => model.ExpiryDays, new { @class = "form-control", style = "text-align:left;" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group clear-block">
                            @Html.LabelFor(model => model.Note, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                <div class="input-block flex-row flex-align-items-center">
                                    @Html.TextBoxFor(model => model.Note, new { @class = "form-control", style = "text-align:left;" })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="form-bottom">
                        <button type="submit" class="btn btn-default">
                            Submit Creation
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


