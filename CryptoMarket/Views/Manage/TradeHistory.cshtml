@model List<Order>
@{
    Layout = "~/Views/Shared/_LayoutAltexBlue.cshtml";
    ViewBag.Title = "Trade History";
}
<div class="row">
    <div class="col-lg-12">
        <div class="markets-filter-tabs clear-block">
            <ul class="flex-row tabs-nav">
                @Html.Partial("_TabbedMenuPartial")
            </ul>
        </div>
        <div class="tab-content">
            <div class="pane active card-block markets-table">
                <div class="markets-table-tbody">
                    <div>
                        <table>
                            <thead>
                                <tr role="row">
                                    <th>
                                        <a>Type</a>
                                    </th>
                                    <th>
                                        <a>Market</a>
                                    </th>
                                    <th>
                                        <a>Amount</a>
                                    </th>
                                    <th>
                                        <a>Price Per One</a>
                                    </th>
                                    <th>
                                        <a>Creation Date</a>
                                    </th>
                                    <th>
                                        <a>Close Date</a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var fixedTotalAmount = item.Amount * item.Price;
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TradeType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MarketId)
                                        </td>
                                        <td>
                                            @item.Amount.ToString("N8")
                                        </td>
                                        <td>
                                            @item.Price.ToString("N8")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateCreated)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateClosed)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
