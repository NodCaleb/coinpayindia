@using CryptoMarket
@model IEnumerable<Logs>

<div class="row">
    <div class="col-sm-12">
        <h2>Administrators Actions</h2>
        <div class="pane active card-block markets-table">
            <div class="markets-table-tbody">
                <table>
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UserId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Text)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ip)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateTime)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", "UsersAdmin", new{id = item.UserId})">@ApplicationUserManager.GetUserEmail(item.UserId)</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Text)
                                </td>
                                <td>
                                    <a href="http://www.ipchecking.com/report/@item.Ip" target="_blank">@item.Ip</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateTime)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

