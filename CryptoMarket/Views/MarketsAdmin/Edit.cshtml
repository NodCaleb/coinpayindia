@model Markets
@{
    Layout = "~/Views/Shared/_LayoutAltexBlue.cshtml";
}
<style>
    .validation-summary-valid { display: none; }

    .validation-summary-errors ul { list-style: none; }
</style>
<div class="pane active card-block">
    <h2 style="margin-left:15px">Edit Market</h2>
    @using (Html.BeginForm("EditSubmit", "MarketsAdmin", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "alert alert-danger" })
        @Html.Hidden("id",Model.Id)
        <div class="form-content">

            <div class="form-group clear-block">
                <label class="col-md-2 control-label" for="PairName">Pair Name</label>
                <div class="col-md-10">
                    <div class="input-block flex-row flex-align-items-center">
                        @Html.EditorFor(model => model.PairName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>
            </div>
            <div class="form-group clear-block">
                <label class="col-md-2 control-label" for="Fee">Order Fee</label>
                <div class="col-md-10">
                    <div class="input-block flex-row flex-align-items-center">
                        @Html.EditorFor(model => model.Fee, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>

        </div>
        <div class="form-bottom">
            <button type="submit" class="btn btn-default">
                Submit Market Editing
            </button>
        </div>
    }
</div>
<p style="margin:15px; font-family:sans-serif;">
    @Html.ActionLink("Back to List", "Index")
</p>