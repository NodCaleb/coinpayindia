@model CryptoMarket.Controllers.EmailAdminController.SendEmailModel

<div class="pane active card-block">
    <h2 style="margin-left:15px">Mass EMail</h2>
    @using (Html.BeginForm("SendToEveryone", "EmailAdmin", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "alert alert-danger" })
        <div class="form-content">
            <div class="form-group clear-block">
                @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="input-block flex-row flex-align-items-center">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group clear-block">
                @Html.LabelFor(model => model.EmailText, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="input-block flex-row flex-align-items-center">
                        @Html.EditorFor(model => model.EmailText, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmailText, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
        <div class="form-bottom">
            <button type="submit" class="btn btn-default">
                Send to everyone
            </button>
        </div>
    }
</div>